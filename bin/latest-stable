#!/usr/bin/env bash

set -euo pipefail

query="${1:-}"
if [ -z "$query" ]; then
  curl --silent "https://api.github.com/repos/FairwindsOps/polaris/releases/latest" | jq ".. .tag_name? // empty"
else
  asdf list all polaris "$query" | grep -ivE "(^Available version:|-src|-dev|-latest|-stm|[-\\.]rc|-alpha|-beta|[-\\.]pre|-next|(a|b|c)[0-9]+|snapshot|master)" | sed 's/^[[:space:]]\+//' | tail -1
fi
